<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Pub</h1>
        <!--Centered again - responsive too-->
        <div class="col-md-6 offset-md-3">
            <form action="/pubs" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <!--margin bottom of 3 for some space on these-->
                <!--Note the label and control grouping-->
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="pub[title]" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="pub[location]" required>
                </div>
                <div class="mb-3">
                    <input class="form-check-input" type="checkbox" id="garden" name="pub[garden]">
                    <label class="custom-control-label" for="garden">Has a Garden?</label>
                </div>
                <div class="mb-3">
                    <input <input class="form-check-input" type="checkbox" id="food" name="pub[food]">
                    <label class="custom-control-label" for="food">Food Served?</label>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="pub[description]"
                        required></textarea>
                </div>
                <div class="mb-3">
                    <div class="form-file">
                        <input type="file" class="form-file-input" id="image" name="image" multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text">Choose image(s)...</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Pub</button>
                </div>
            </form>
            <a href="/pubs">All Pubs</a>
        </div>
    </div>